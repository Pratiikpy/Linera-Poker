# Linera Poker Environment Configuration
# Copy this file to .env and fill in your values
# For Conway testnet, see .env.conway with live deployment

# Network Mode: 'local' or 'conway'
VITE_NETWORK_MODE=conway

# Linera Network URLs
VITE_FAUCET_URL=https://faucet.testnet-conway.linera.net
VITE_SERVICE_URL=https://service.testnet-conway.linera.net

# Table Chain (Dealer) - Deploy table contract first
VITE_TABLE_CHAIN_ID=your_table_chain_id
VITE_TABLE_APP_ID=your_table_app_id

# Player A Chain - Deploy hand contract
VITE_PLAYER_A_CHAIN_ID=your_player_a_chain_id
VITE_PLAYER_A_HAND_APP_ID=your_hand_a_app_id

# Player B Chain - Deploy hand contract
VITE_PLAYER_B_CHAIN_ID=your_player_b_chain_id
VITE_PLAYER_B_HAND_APP_ID=your_hand_b_app_id

# Game Configuration
VITE_MIN_STAKE=10
VITE_MAX_STAKE=1000
